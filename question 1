import time

def NaiÄ±veiterative (a, n):
    result = 1
    for _ in range(n):
        result *= a
    return result

def divideandconquer(a, n):
    if n == 0:
        return 1
    elif n % 2 == 0:
        half = divideandconquer(a, n // 2)
        return half * half
    else:
        half = divideandconquer(a, (n - 1) // 2)
        return a * half * half
